{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node" /* import가 무엇을 참조하는지 확인 */,
    "resolveJsonModule": true /* 정적으로 json가져오기 */,
    "forceConsistentCasingInFileNames": true /* 파일의 상태가 다르면 다르게 구분짓게 도와줌 */,
    "noEmit": true,
    "jsx": "react-jsx",
    /* 이후 추가한 것 */
    "baseUrl": "src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "src",
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
